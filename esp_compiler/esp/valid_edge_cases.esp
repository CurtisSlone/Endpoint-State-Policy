# Edge cases that should pass validation
DEF
# Empty string handling
VAR empty_string string ``
VAR path_with_backslashes string `C:\Program Files\App\config.ini`
VAR string_with_backticks string `This has ``backticks`` in it`

# Boundary integer values
VAR max_int int 9223372036854775807
VAR min_int int -9223372036854775808
VAR zero int 0

# Float edge cases
VAR small_float float 0.000000001
VAR large_float float 999999999.999999999

# Unicode in string literals

# Complex patterns and operations
STATE edge_case_state
    empty_check string = VAR empty_string
    path_check string = VAR path_with_backslashes
    backtick_check string = VAR string_with_backticks
    boundary_int int = VAR max_int
    small_num float = VAR small_float

    # All valid type-operation combinations
    str_equals string = `test`
    str_not_equals string != `test`
    str_greater string > `a`
    str_case_insensitive string ieq `TEST`
    str_contains string contains `sub`
    str_starts string starts `pre`
    str_ends string ends `suf`
    str_pattern string pattern_match `^test.*$`

    int_equals int = 100
    int_not_equals int != 100
    int_greater int > 50
    int_greater_equal int >= 50
    int_less int < 200
    int_less_equal int <= 200

    bool_equals boolean = true
    bool_not_equals boolean != false

    version_equals version = `1.0.0`
    version_greater version > `1.0.0`
    version_less version < `2.0.0`
STATE_END

CRI AND
CTN edge_test
    TEST all all
    STATE_REF edge_case_state
CTN_END
CRI_END
DEF_END
