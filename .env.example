#
# Compile Time Variables
#
# Build profile determines which TOML config file to use
# Valid values: development, production, testing
ESP_BUILD_PROFILE=development

# Directory containing TOML configuration files
ESP_CONFIG_DIR=config


#
# Runtime Time Variables
#

# File processor
#
# Whether to require .ics extension (user preference, not security)
ESP_REQUIRE_ESP_EXTENSION=true

# Whether to enable detailed performance logging (user preference)
ESP_ENABLE_PERFORMANCE_LOGGING=true

# Whether to log debug information for non-ICS files
ESP_LOG_NON_ESP_PROCESSING=false

# Whether to include complexity scores in output
ESP_INCLUDE_COMPLEXITY_METRICS=true

# Lexical Analysis
#
# Whether to collect detailed token metrics
ESP_LEXICAL_DETAILED_METRICS=true

# Whether to include whitespace and comments in token counts
ESP_LEXICAL_INCLUDE_ALL_TOKENS=false

# Whether to log string length statistics
ESP_LEXICAL_LOG_STRING_STATS=false

# Whether to track operator usage patterns
ESP_LEXICAL_TRACK_OPERATORS=false

# Whether to show position information in error messages
ESP_LEXICAL_INCLUDE_POSITIONS=true

# Symbol Discovery
#
# Whether to collect detailed relationship information
ESP_SYMBOLS_DETAILED_RELATIONSHIPS=true

# Whether to track cross-reference statistics
ESP_SYMBOLS_TRACK_CROSS_REFS=false

# Whether to validate symbol naming conventions
ESP_SYMBOLS_VALIDATE_NAMING=false

# Whether to include symbol usage metrics in output
ESP_SYMBOLS_INCLUDE_USAGE_METRICS=true

# Whether to log warnings for failed relationship additions
ESP_SYMBOLS_LOG_RELATIONSHIP_WARNINGS=true

# Whether to include dependency chain analysis
ESP_SYMBOLS_ANALYZE_DEPENDENCY_CHAINS=false

# Reference Validation
#
# Whether to perform cycle detection (user can disable for performance)
ESP_REFERENCES_ENABLE_CYCLE_DETECTION=true

# Whether to log detailed reference validation steps
ESP_REFERENCES_LOG_VALIDATION_DETAILS=false

# Whether to include cycle descriptions in output
ESP_REFERENCES_INCLUDE_CYCLE_DESCRIPTIONS=true

# Whether to continue validation after finding cycles
ESP_REFERENCES_CONTINUE_AFTER_CYCLES=true

# Whether to validate reference type consistency
ESP_REFERENCES_VALIDATE_TYPES=true

# Semantic Analysis
#
# Whether to perform comprehensive type checking
ESP_SEMANTIC_COMPREHENSIVE_TYPE_CHECKING=true

# Whether to validate runtime operation constraints
ESP_SEMANTIC_VALIDATE_RUNTIME_CONSTRAINTS=true

# Whether to check SET operation semantics
ESP_SEMANTIC_CHECK_SET_SEMANTICS=true

# Whether to analyze dependency cycles
ESP_SEMANTIC_ANALYZE_CYCLES=true

# Whether to include detailed error context
ESP_SEMANTIC_DETAILED_ERROR_CONTEXT=true

# Structural Validation
#
# Whether to perform advanced consistency checking (user preference)
ESP_STRUCTURAL_ADVANCED_CONSISTENCY_CHECKS=true

# Whether to log detailed structural analysis metrics
ESP_STRUCTURAL_LOG_DETAILED_METRICS=false

# Whether to include complexity breakdown in output
ESP_STRUCTURAL_INCLUDE_COMPLEXITY_BREAKDOWN=true

# Whether to validate optional structural recommendations
ESP_STRUCTURAL_VALIDATE_RECOMMENDATIONS=false

# Whether to analyze structural quality patterns
ESP_STRUCTURAL_ANALYZE_QUALITY_PATTERNS=false

# Logging Preferences
#
# Whether to use structured JSON logging (user preference)
ESP_LOGGING_USE_STRUCTURED=false

# Whether to enable console output (user preference)
ESP_LOGGING_ENABLE_CONSOLE=true

# User preferred minimum log level (error|warning|info|debug or 0|1|2|3)
ESP_LOGGING_MIN_LEVEL=debug

# Whether to include performance metrics in logs
ESP_LOGGING_LOG_PERFORMANCE=true

# Whether to include detailed security metrics
ESP_LOGGING_LOG_SECURITY=true

# Whether to enable cargo-style error reporting
ESP_LOGGING_CARGO_STYLE=true

# Whether to include file context in log messages
ESP_LOGGING_INCLUDE_FILE_CONTEXT=true
